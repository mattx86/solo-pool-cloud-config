[Unit]
Description=Minotari Miner (Tari Solo)
After=node-xtm-minotari.service
Requires=node-xtm-minotari.service

[Service]
Type=simple
User=${POOL_USER}
Group=${POOL_USER}

ExecStart=${TARI_DIR}/bin/minotari_miner --network=${TARI_NETWORK} --config=${XTM_MINER_DIR}/config/config.toml --non-interactive-mode
ExecStop=/bin/kill -SIGTERM $MAINPID

Restart=on-failure
RestartSec=10

NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
